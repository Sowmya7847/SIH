<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Optimized Metro Dashboard</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
.card-train { transition: transform 0.2s; }
.card-train:hover { transform: scale(1.05); }
.low { background-color: #d1e7dd !important; }
.medium { background-color: #fff3cd !important; }
.high { background-color: #f8d7da !important; animation: flash 1s infinite; }
@keyframes flash { 0%,100%{background-color:#f8d7da}50%{background-color:#f5c2c7} }
</style>
</head>
<body class="bg-light">
<div class="container py-5">
<h1 class="mb-5 text-center text-success">Optimized Metro Dashboard</h1>
<div class="row g-4 mb-5">
  <div class="col-md-6">
    <h3 class="text-center mb-3 text-warning">Before Optimization</h3>
    <% before.forEach(slot => { %>
      <div class="card mb-3 card-train <%= slot.trains <=3 ? 'low' : slot.trains <=6 ? 'medium' : 'high' %> shadow-sm">
        <div class="card-body d-flex justify-content-between">
          <strong><%= slot.station %> <%= slot.time %></strong>
          <span>Trains: <%= slot.trains %></span>
        </div>
      </div>
    <% }) %>
  </div>
  <div class="col-md-6">
    <h3 class="text-center mb-3 text-primary">After Optimization</h3>
    <% after.forEach(slot => { %>
      <div class="card mb-3 card-train <%= slot.trains <=3 ? 'low' : slot.trains <=6 ? 'medium' : 'high' %> shadow-sm">
        <div class="card-body d-flex justify-content-between">
          <strong><%= slot.station %> <%= slot.time %></strong>
          <span>Trains: <%= slot.trains %></span>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<div class="text-center">
  <a href="/" class="btn btn-success btn-lg">Back to Timetable</a>
</div>
</div>
</body>
</html>
